<div class="clashBarContainer">
    <div class="clashBar">
        <div class="clashSegment blue" style="flex: @amountOfBlues"></div>
        <div class="clashSegment white" style="flex: @amountOfWhites"></div>
        <div class="clashSegment red" style="flex: @amountOfReds"></div>
    </div>
    <div class="clashLabels">
        <span class="label blueLabel">Blue: @amountOfBlues</span>
        <span class="label whiteLabel">White: @amountOfWhites</span>
        <span class="label redLabel">Red: @amountOfReds</span>
    </div>
</div>
@if (amountOfWhites == 0 || amountOfReds == 0 || amountOfBlues == 0 || gameOver == true)
{
    <div class="winnerMessage">
        @if (amountOfBlues > amountOfReds)
        {
            <span class="Winner" @onclick="() => restartGame.InvokeAsync()">Blue wins!<br />press here to restart</span>
        }
        else if (amountOfReds > amountOfBlues)
        {
            <span class="Winner" @onclick="() => restartGame.InvokeAsync()">Red wins!<br />press here to restart</span>
        }
        else
        {
            <span class="Winner" @onclick="() => restartGame.InvokeAsync()">It's a tie!<br />press here to restart</span>
        }
    </div>
}


@code {

    [Parameter] public int amountOfBlues { get; set; }
    [Parameter] public int amountOfWhites { get; set; }
    [Parameter] public int amountOfReds { get; set; }
    [Parameter] public bool gameOver { get; set; }
    [Parameter] public EventCallback restartGame { get; set; }
}
